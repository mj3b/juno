# Required: Jira and AI provider settings
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
OPENAI_API_KEY=your-openai-key

# Azure OpenAI (alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_DEPLOYMENT=your-deployment

# Provider Selection
GPT_PREFERRED_PROVIDER=openai  # Options: openai, azure, local

# Phase 2: Agentic capabilities
JUNO_PHASE=2
MEMORY_ENABLED=true
AUTONOMOUS_ACTIONS=true
SUPERVISOR_MODE=true

# Governance and compliance
AUDIT_TRAIL_ENABLED=true
CONFIDENCE_THRESHOLD=0.8
ESCALATION_ENABLED=true
LEAD_PM_APPROVAL_REQUIRED=true

# Memory and learning configuration
MEMORY_PROVIDER=local  # Options: local, redis, postgresql
MEMORY_RETENTION_DAYS=90
SESSION_TIMEOUT_MINUTES=60

# Transparent reasoning
REASONING_ENABLED=true
CONFIDENCE_SCORING=true
EXPLANATION_DETAIL_LEVEL=detailed  # Options: basic, detailed, verbose

# Sprint Risk Forecast
RISK_FORECAST_ENABLED=true
VELOCITY_ANALYSIS_ENABLED=true
BOTTLENECK_DETECTION=true
PROACTIVE_RECOMMENDATIONS=true

# Stale Triage Resolution
STALE_TRIAGE_ENABLED=true
STALE_THRESHOLD_DAYS=3
AUTO_RESOLUTION_ENABLED=true
REASSIGNMENT_ENABLED=true

# Lead/PM Workflow Configuration
LEAD_APPROVAL_THRESHOLD=0.7  # Confidence threshold requiring approval
PM_ESCALATION_ENABLED=true
WORKFLOW_ARCHITECT_MODE=true

# Observability and monitoring
AUDIT_LOG_LEVEL=detailed
PERFORMANCE_MONITORING=true
COMPLIANCE_REPORTING=true
ALERT_NOTIFICATIONS=true

# Advanced features
MULTI_AGENT_COORDINATION=false  # Phase 3 feature
PREDICTIVE_ANALYTICS=true
WORKFLOW_OPTIMIZATION=true
CONTINUOUS_LEARNING=true

# Security and compliance
ENCRYPTION_ENABLED=true
RBAC_ENABLED=true
COMPLIANCE_MODE=enterprise
SECURITY_AUDIT_ENABLED=true

# API and integration settings
API_RATE_LIMIT=120  # requests per minute (increased for Phase 2)
CACHE_TIMEOUT=600  # seconds (increased for better performance)
MAX_QUERY_RESULTS=2000  # increased for comprehensive analysis
WEBHOOK_ENABLED=true

# Development and debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false
DEVELOPMENT_MODE=false
TEST_MODE=false

